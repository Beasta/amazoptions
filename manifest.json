{
  "name": "Amazoptions",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "See all the prices at once.",
  "homepage_url": "https://github.com/nathanleiby/amazoptions",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.amazon.com/*/dp/*/*",
        "http://www.amazon.com/*/product/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "http://www.amazon.com/*/dp/*/*",
        "http://www.amazon.com/*/product/*"

      ],
      "js": [
        "src/inject/inject.js",
        "js/jquery/jquery.js"

      ]
    }
  ]
}